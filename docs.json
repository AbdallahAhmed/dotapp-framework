{
    "swagger": "2.0",
    "info": {
        "title": "CMS",
        "description": "The API documentation",
        "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "paths": {
        "/user": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Find all users",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "limit",
                        "required": true,
                        "type": "integer",
                        "enum": [
                            1,
                            3
                        ]
                    }
                ],
                "responses": {
                    "$ref": "#/responses"
                },
                "security": [
                    {
                        "api_key": []
                    }
                ]
            }
        }
    },
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "responses": {
        "200": {
            "description": "Successful operation"
        },
        "401": {
            "description": "Unauthenticated"
        },
        "403": {
            "description": "Access denied"
        },
        "404": {
            "description": "API endpoint not found"
        },
        "422": {
            "description": "Validation error"
        },
        "500": {
            "description": "Internal server error"
        }
    }
}
