<html>
    <head>
        <meta charset="utf8" />
        <title>DotApp Framework</title>
        <style>
            * {
                padding: 0;
                margin: 0;
                box-sizing: border-box;
            }

            .container {
                display: flex;
                width: 400px;
                justify-content: center;
                align-items: center;
                margin: 0 auto;
                height: 100vh;
            }

            h1 {
                text-align: center;
                font-family: tahoma;
                color: rgb(158, 158, 158);
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>
                Hello <%= req.lang("app.name") %>
            </h1>
        </div>
    </body>
</html>
